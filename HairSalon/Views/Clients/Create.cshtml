@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<h4>Add a new client</h4>
@using (Html.BeginForm())
{
    <h3>@Html.LabelFor(model => model.ClientName)</h3>
    <h3>@Html.TextBoxFor(model => model.ClientName)</h3>
    <h3>Select @Html.LabelFor(model => model.Stylist) to add clients: @Html.DropDownList("StylistId")</h3>
    <input type="submit" value="Add new client" />
}
<p>@Html.ActionLink("Show all stylists", "Index","Stylists")</p>
<p>@Html.ActionLink("Return Home Page", "Index","Home")</p>