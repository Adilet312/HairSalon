@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>List of Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Read", new { readID = client.ClientId }) | @client.Stylist.StylistName | Stylist's specialty: @client.Stylist.StylistSpecialty </li>
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Back to List of Stylists", "Index","Stylists")</p>
<p>@Html.ActionLink("Back to Home Page", "Index","Home")</p>