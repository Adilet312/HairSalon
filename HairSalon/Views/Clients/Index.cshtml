@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>List of Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <h3><li>@Html.ActionLink($"{client.ClientName}", "Read", new { readID = client.ClientId }) | Stylist's name: @client.Stylist.StylistName | Stylist's specialty: @client.Stylist.StylistSpecialty </li></h3>
}
<hr />
<h3>@Html.ActionLink("Add new Stylist", "Create")</h3>
<h3>@Html.ActionLink("Back to List of Stylists", "Index","Stylists")</h3>
<h3>@Html.ActionLink("Back to List of Clients", "Index", "Clients")</h3>
<h3>@Html.ActionLink("Back to Home Page", "Index","Home")</h3>