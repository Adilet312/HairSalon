@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
<h1>Welcome list of stylists's page.</h1>
@if(@Model.Count==0)
{
    <h4>There is no stylists in our list.</h4>
}
<ul> 
  @foreach(Stylist stylist in Model)
  {
      <h3><li>@Html.ActionLink($"{stylist.StylistName}",  "Read", new { readID = stylist.StylistId })</li></h3>
  }
</ul>
<hr/>
<h3>@Html.ActionLink("Add new stylist", "Create")</h3>
<h3>@Html.ActionLink("See all Clients", "Index", "Clients")</h3>
<h3>@Html.ActionLink("Return Home Page","Index","Home")</h3>

