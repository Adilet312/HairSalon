@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;
<h1>Welcome Eau Claire's Salon.</h1>
@if(@Model.Count==0)
{
    <h4>There is no stylists in our list.</h4>
}
<ul> 
  @foreach(Stylist stylist in Model)
  {
      <li>@Html.ActionLink($"{stylist.StylistName}",  "Read", new { readID = stylist.StylistId })</li>
  }
</ul>
<hr/>
<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Return Home Page","Index","Home")</p>

